{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "tone-presence-study results",
  "type": "object",
  "required": ["model", "date", "trials_per_condition", "means", "PMI", "provenance"],
  "properties": {
    "model": {"type": "string"},
    "version": {"type": "string"},
    "date": {"type": "string"},
    "trials_per_condition": {"type": "integer", "minimum": 1},
    "means": {
      "type": "object",
      "required": ["pressure_cofac", "pressure_directive"],
      "properties": {
        "pressure_cofac": {"type": "number"},
        "pressure_directive": {"type": "number"}
      }
    },
    "PMI": {"type": "number"},
    "coherence_corridor_success_pct": {"type": "number"},
    "rater_agreement_alpha": {"type": "number"},
    "provenance": {
      "type": "object",
      "required": ["temperature", "seeds", "git_commit", "protocol_path"],
      "properties": {
        "temperature": {"type": "number"},
        "seeds": {"type": "array", "items": {"type": "integer"}},
        "git_commit": {"type": "string"},
        "protocol_path": {"type": "string"},
        "notes": {"type": "string"}
      }
    }
  }
}